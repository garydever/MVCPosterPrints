@model ArtworkViewModel

    <h1 class="text-center">MVC Poster Prints Web Store</h1>
    <h2 class="text-center">Order high quality image prints</h2>
    <div  class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="@Model.AllArtwork.FirstOrDefault(image => image.ArtworkId==6).ImageUrl" alt="First slide">
            </div>
            @foreach (var artwork in Model.AllArtwork)
            {
                <div class="carousel-item">
                    <img class="d-block w-100" src="@artwork.ImageUrl" alt="@artwork.Name">
                </div>
            }
        </div>
    </div>
